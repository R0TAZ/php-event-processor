{
  "name": "rotaz/event-processor",
  "description": "A decoupled, flexible PHP event processor for modern enterprise integrations.",
  "type": "library",
  "license": "MIT",
  "minimum-stability": "stable",
  "require": {
    "php": "^8.0 || ^8.1 || ^8.2 || ^8.3 || ^8.4",
    "illuminate/bus": "^9.0 || ^10.0 || ^11.0 || ^12.0",
    "illuminate/database": "^9.0 || ^10.0 || ^11.0 || ^12.0",
    "illuminate/http": "^9.0 || ^10.0 || ^11.0 || ^12.0",
    "illuminate/support": "^9.0 || ^10.0 || ^11.0 || ^12.0",
    "spatie/laravel-package-tools": "^1.11"
  },
  "require-dev": {
    "orchestra/testbench": "^7.0 || ^8.0 || ^9.0 || ^10.0",
    "pestphp/pest": "^3.8",
    "pestphp/pest-plugin-laravel": "^3.2",
    "phpstan/extension-installer": "^1.0",
    "phpstan/phpstan-deprecation-rules": "^1.0",
    "phpstan/phpstan-phpunit": "^1.0",
    "phpunit/phpunit": "^9.3 || ^10.5 || ^11.5.3 || ^12.0",
    "spatie/laravel-ray": "^1.24",
    "fakerphp/faker": "^1.21"
  },
  "autoload": {
    "psr-4": {
      "Rotaz\\EventProcessor\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Rotaz\\EventProcessor\\Tests\\": "tests/"
    }
  },
  "keywords": [
    "event processor",
    "php events",
    "enterprise integration",
    "webhook",
    "event-driven",
    "decoupled architecture",
    "integration",
    "microservices",
    "laravel",
    "symfony",
    "php"
  ],
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "phpstan/extension-installer": true
    },
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-master": "11.x-dev"
    },
    "laravel": {
      "providers": [
        "Rotaz\\EventProcessor\\R0TAZEventProcessorServiceProvider"
      ]
    }
  },
  "scripts": {
    "analyse": "vendor/bin/phpstan analyse",
    "psalm": "vendor/bin/psalm",
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
  }
}
